{% if app.session.get('templateId') == 0 %}
    <h4>Выбрать текст.</h4>
    {% include "TotalcanDocumancerBundle:Wizard:templateSelect.html.twig" %}
    <br>
{% elseif app.session.get('templateId') > 0 %}
    <h4>Текст документа:</h4>
    {% if templateForm is defined and templateForm%}
    <div class="btn-toolbar">
        <div class="btn-group">
            <button class="btn btn-primary" id="editTemplateButton"><i class="icon-edit icon-white"></i> {{template.title}}</button>
            <button class="btn btn-info" id="changeTemplateButton"><i class="icon-retweet icon-white"></i> Сменить</button>
        </div>
    </div>
    <div id="editTemplateForm" class="hide">
        {{templateForm|raw}}
    </div>
    <div id="selectTemplateForm" class="hide">
        {% include "TotalcanDocumancerBundle:Wizard:templateSelect.html.twig" %}
    </div>
    {% endif %}

{% endif %}