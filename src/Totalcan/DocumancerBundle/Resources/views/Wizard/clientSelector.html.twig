{% if app.session.get('clientId') == 0 %}
    <h4>Выбрать клиента</h4>
    {% if clients is defined and clients%}
    <div class="btn-toolbar">
        <div class="btn-group">
            <div class="input-append">
            <form>
            <select name="clientId" id="listClientButton" >
                {% for client in clients %}
                    <option value="{{client.id}}">{{client.title}}</option>
                {% endfor %}
            </select>
            <button class="btn btn-success" id="loadClientButton">Choose</button>
            </form>
            </div>
        </div>
        <div class="btn-group">
            <button class="btn btn-warning" id="newClientButton">New client</button>
        </div>
    </div>

        {% if clientForm is defined and clientForm%}
        <div id="newClientForm" class="hide">
            {{clientForm|raw}}
        </div>
        {% endif %}
    {% endif %}
    <br>
{% elseif app.session.get('clientId') > 0 %}
    <h4>Изменить клиента</h4>
    {% if clientForm is defined and clientForm%}
    <span>Выбран клиент: {{clients.title}}</span>
    <div class="btn-toolbar">
        <div class="btn-group">
            <button class="btn btn-warning" id="editClientButton">View data</button>
        </div>
    </div>
    <div id="editClientForm" class="hide">
        {{clientForm|raw}}
    </div>
    {% endif %}

{% endif %}