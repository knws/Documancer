{% if app.session.get('designId') == 0 %}
    {# Создаем нового клиента, возможность выбрать существующего #}
    <h4>Шаг 0. Создаем нового клиента или выбираем из списка.</h4>
    {% if designs is defined and designs%}
    <div class="btn-toolbar">
        <div class="btn-group">
            <div class="input-append">
            <form>
            <select name="designId" id="appendedInputButton" >
                {% for design in designs %}
                    <option value="{{design.id}}">{{design.title}}</option>
                {% endfor %}
            </select>
            <button class="btn btn-success" id="loadDesignButton">Choose</button>
            </form>
            </div>
        </div>
        <div class="btn-group">
            <button class="btn btn-warning" id="newDesignButton">New design</button>
        </div>
    </div>

        {% if designForm is defined and designForm%}
        <div id="newDesignForm" class="hide">
            {{designForm|raw}}
        </div>
        {% endif %}
    {% endif %}
    <br>
{% elseif app.session.get('designId') > 0 %}
    {# Отображаем созданного клиента #}
    <h4>Шаг 1. Формируем данные клиента, добавляем при необходимости переменные.</h4>
    {% if designForm is defined and designForm%}
    <span>Выбран клиент: {{designs.title}}</span>
    <div class="btn-toolbar">
        <div class="btn-group">
            <button class="btn btn-warning" id="editDesignButton">View data</button>
        </div>
    </div>
    <div id="editDesignForm" class="hide">
        {{designForm|raw}}
    </div>
    {% endif %}
{% endif %}
