<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="totalcan_bravoreg.auth" class="Totalcan\BravoregBundle\Security\Authentication\Provider\BravoregProvider" public="false">
            <argument /> <!-- Provider-shared Key -->
            <argument type="service" id="totalcan_bravoreg.api" />
        </service>

        <service id="totalcan_bravoreg.security.authentication.listener"
                 class="Totalcan\BravoregBundle\Security\Firewall\BravoregListener"
                 parent="security.authentication.listener.abstract"
                 abstract="true">
        </service>

        <service id="totalcan_bravoreg.security.authentication.entry_point" class="Totalcan\BravoregBundle\Security\EntryPoint\BravoregAuthenticationEntryPoint" public="false" abstract="true">
            <argument type="service" id="totalcan_bravoreg.api" />
            <argument type="collection" />
            <argument>%totalcan_bravoreg.permissions%</argument>
        </service>

    </services>
</container>
